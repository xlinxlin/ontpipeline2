              <tooltip>
                <Tooltip text="Trim n nucleotides from start of read." />
              </tooltip>
            </Label>
            <TextField fx:id="tfReadLength" layoutX="102.0" layoutY="92.0" prefHeight="26.0" prefWidth="320.0" text="500" />
            <TextField fx:id="tfHeadCrop" layoutX="102.0" layoutY="178.0" prefHeight="26.0" prefWidth="320.0" text="50" />
         </children>
      </Group>
      <CheckBox fx:id="cReadsFilter" layoutX="83.0" layoutY="71.0" mnemonicParsing="false" text="I do not need reads filter" />
   </children>
</AnchorPane>
