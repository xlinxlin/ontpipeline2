            </Label>
            <TextField fx:id="tfReadScore" layoutX="102.0" prefHeight="26.0" prefWidth="320.0" text="9" />
            <Label layoutY="95.0" text="Read Length">
              <tooltip>
                <Tooltip text="Set a minimum read length for filter." />
              </tooltip>
            </Label>
