<AnchorPane minHeight="400.0" minWidth="600.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mbio.ncct.ont.view.ReadsFilterSettingsController">
   <children>
      <Group fx:id="gpReadsFilter" layoutX="77.0" layoutY="132.0">
