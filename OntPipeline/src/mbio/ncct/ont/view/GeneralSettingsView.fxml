<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane minHeight="400.0" minWidth="600.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mbio.ncct.ont.view.GeneralSettingsController">
   <children>
      <Label layoutX="36.0" layoutY="60.0" text="Workspace">
        <tooltip>
          <Tooltip text="Select your .fast5/.fastq file folder." />
        </tooltip>
      </Label>
      <TextField fx:id="tfWorkspace" layoutX="121.0" layoutY="54.0" prefHeight="26.0" prefWidth="351.0" />
      <Button layoutX="471.0" layoutY="54.0" mnemonicParsing="false" onAction="#selectWorkspaceHandler" text="Browse" />
      <Label layoutX="55.0" layoutY="136.0" text="Threads">
        <tooltip>
          <Tooltip text="Set the threads you want to use during the run." />
        </tooltip>
      </Label>
      <TextField fx:id="tfThreads" layoutX="121.0" layoutY="131.0" prefHeight="26.0" prefWidth="351.0" />
      <Label layoutX="47.0" layoutY="214.0" text="Barcodes">
        <tooltip>
          <Tooltip text="Set which barcode(s) you want to analysis, e.g.: 1,2,3,4, or left it blank for all barcodes." />
        </tooltip>
      </Label>
      <TextField fx:id="tfBarcode" layoutX="121.0" layoutY="208.0" prefHeight="26.0" prefWidth="351.0" />
      <CheckBox fx:id="cAdapterTrimming" layoutX="52.0" layoutY="283.0" mnemonicParsing="false" text="I do not need adaper trimming" />
   </children>
</AnchorPane>
